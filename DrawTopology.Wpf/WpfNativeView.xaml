<UserControl
    x:Class="DrawTopology.Wpf.WpfNativeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DrawTopology.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DataContext="{d:DesignInstance Type=local:WpfNativeView}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0">
            <ListBoxItem Content="默认图形" PreviewMouseLeftButtonDown="ListBoxItem_PreviewMouseLeftButtonDown" />
            <ListBoxItem Content="随机生成" PreviewMouseLeftButtonDown="ListBoxItem_PreviewMouseLeftButtonDown_1" />
            <Separator />
            <ListBoxItem>
                <StackPanel>
                    <Label Content="生成配置" />
                    <CheckBox Content="自连接" IsChecked="{Binding AllowLinkSelf, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    <Label Content="节点数量" />
                    <TextBox Text="{Binding NodeCount, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    <Label Content="边数量" />
                    <TextBox Text="{Binding EdgeCount, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </StackPanel>
            </ListBoxItem>
        </ListBox>

        <ScrollViewer
            Grid.Column="1"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <Canvas Name="GraphView" />
        </ScrollViewer>
    </Grid>
</UserControl>

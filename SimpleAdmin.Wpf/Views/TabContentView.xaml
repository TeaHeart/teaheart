<UserControl
    x:Class="SimpleAdmin.Wpf.Views.TabContentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:markup="clr-namespace:SimpleAdmin.Wpf.Windows.Markup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SimpleAdmin.Wpf.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:TabContentViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <markup:Di ServiceType="{x:Type vm:TabContentViewModel}" />
    </UserControl.DataContext>

    <TabControl ItemsSource="{Binding TabItems}" SelectedIndex="{Binding SelectedTabIndex}">
        <TabControl.ItemTemplate>
            <DataTemplate>
                <TextBlock>
                    <Run Text="{Binding Header}" />
                    <Hyperlink
                        Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding}"
                        Foreground="Black"
                        TextDecorations="None">
                        <Run Text=" x " />
                    </Hyperlink>
                </TextBlock>
            </DataTemplate>
        </TabControl.ItemTemplate>
        <TabControl.ContentTemplate>
            <DataTemplate>
                <ContentControl Content="{Binding Content}" />
            </DataTemplate>
        </TabControl.ContentTemplate>
    </TabControl>
</UserControl>
